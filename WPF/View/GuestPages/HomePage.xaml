<Page x:Class="BookingApp.WPF.View.GuestPages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:guest="clr-namespace:BookingApp.WPF.ViewModel.Guest"
      mc:Ignorable="d"
      Title="HomePage" Height="750" Width="430" Background="#D8BFD8">
    
    <Page.DataContext>
        <guest:HomePageViewModel/>
    </Page.DataContext>

    <Grid HorizontalAlignment="Center">
        <StackPanel Margin="10">
            <Button Content="get all accommodation" Margin="10" Click="OpenGetAllPage" Background="#AE82FF"/>
            <Button Content="search for accommodation" Margin="10" Click="OpenSearchForAccommodation" Background="#AE82FF"/>
            <Button Content="My Reservations" Click="OpenGetMyReservations" Margin="10" Background="#AE82FF"/>
        </StackPanel>
    </Grid>
</Page>